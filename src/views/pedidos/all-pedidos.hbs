<div class="row">
  {{#each pedidos}}
  <div class="col-md-3">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title d-flex justify-content-between align-items-center">
          {{ fecha }} <a href="/pedidos/edit/{{_id}}"><i class="fas fa-edit"></i></a>
        </h4>
        <p>{{ cliente }} </p>
        <p>{{ telefono }} </p>
        <p>{{ tipo }} </p>
        <p>{{ tama√±o }} </p>
        <p>{{ decoracion }} </p>
        <p>{{ hora }} </p>
        <p>{{ valor }} </p>
        <p>{{ detalles }} </p>
        <!-- DELETE REQUEST -->
        <form action="/pedidos/delete/{{_id}}?_method=DELETE" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-danger btn-block btn-sm">Eliminar</button>
        </form>
      </div>
    </div>
  </div>
  {{else}}
  <div class="card mx-auto">
    <div class="card-body">
      <h1>Hola! {{user.name}}</h1>
      <p clsss="lead">Aun no hay pedidos</p>
      <a href="/pedidos/add" class="btn btn-success btn-block">Agrega uno!</a>
    </div>
  </div>
  {{/each}}
</div>