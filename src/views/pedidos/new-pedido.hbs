<div class="col-md-4 mx-auto">
  <div class="card text-center">
    <div class="card-header">
      <h3>Nuevo pedido</h3>
    </div>
    <div class="card-body">
      <form action="/pedidos/new-pedido" method="POST">
        <div class="form-group">
                    <input type="date" name="fecha" class="form-control" placeholder="Fecha"
                    autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="cliente" class="form-control" placeholder="Cliente"
                    autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="telefono" class="form-control" placeholder="Telefono"
                    autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="tipo" class="form-control" placeholder="Tipo pastel"
                    autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="tamaño" class="form-control" placeholder="Tamaño"
                    autofocus>
                </div>
                <div class="form-group">
                    <input type="text" name="decoracion" class="form-control" placeholder="Decoracion"
                    autofocus>
                </div>
                 <div class="form-group">
                    <input type="text" name="hora" class="form-control" placeholder="Hora"
                    autofocus>
                </div>
                 <div class="form-group">
                    <input type="text" name="valor" class="form-control" placeholder="Valor"
                    autofocus>
                </div>
                 <div class="form-group">
                    <textarea type="text" name="detalles" class="form-control" placeholder="Detalles"
                    ></textarea>
                </div>
                 <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Guardar
                    </button>
                </div>
      </form>
    </div>
  </div>
</div>

