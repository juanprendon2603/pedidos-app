{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  {{text}}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{/each}}

<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header">
      <h3>Editar pedido</h3>
    </div>
    <div class="card-body">
      <form action="/pedidos/edit-pedido/{{pedido._id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
         <div class="form-group">
                    <input type="date" name="fecha" class="form-control" value="{{pedido.fecha}}"/>
                </div>
                <div class="form-group">
                    <input type="text" name="cliente" class="form-control" value="{{pedido.cliente}}"/>
                </div>
                <div class="form-group">
                    <input type="number" name="telefono" class="form-control" value="{{pedido.telefono}}"/>
                </div>
                <div class="form-group">
                    <input type="text" name="tipo" class="form-control" value="{{pedido.tipo}}"/>
                </div>
                <div class="form-group">
                    <input type="text" name="tamaño" class="form-control" value="{{pedido.tamaño}}"/>
                </div>
                <div class="form-group">
                    <input type="text" name="decoracion" class="form-control" value="{{pedido.decoracion}}"/>
                </div>
                 <div class="form-group">
                    <input type="text" name="hora" class="form-control" value="{{pedido.hora}}"/>
                </div>
                 <div class="form-group">
                    <input type="time" name="valor" class="form-control" value="{{pedido.valor}}"/>
                </div>
                 <div class="form-group">
                    <textarea type="text" name="detalles" class="form-control" 
                    >{{pedido.detalles}}</textarea>
                </div>
                 <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">
                        Guardar
                    </button>
                </div>
      </form>
    </div>
  </div>
</div>
